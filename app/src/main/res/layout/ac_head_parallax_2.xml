<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mrchao.ui.headparallx2.HeaderViewPager
        android:id="@+id/headScrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:hvp_topOffset="22dp">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivover"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coordinator_bg"
        android:tag="overScroll" />

</FrameLayout>

        <android.support.design.widget.TabLayout
            android:tag="tablayout"
            android:id="@+id/tl_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:paddingEnd="20dp"
            app:paddingStart="20dp"
            app:tabBackground="@color/white"
            app:tabContentStart="100dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/black" />


        <android.support.v4.view.ViewPager
            android:overScrollMode="never"
            android:id="@+id/vp_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

    </com.mrchao.ui.headparallx2.HeaderViewPager>


</FrameLayout>